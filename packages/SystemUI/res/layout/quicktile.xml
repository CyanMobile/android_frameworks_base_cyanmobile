<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" >
        <LinearLayout
             android:layout_weight="3"
             android:layout_width="match_parent"
             android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/airplanetile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/airplane_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/airplane_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/alarmtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/alarm_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/alarm_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/bluetoothtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bluetooth_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/bluetooth_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/batterytile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/battery_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/battery_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
     </LinearLayout>
        <LinearLayout
             android:layout_weight="3"
             android:layout_width="match_parent"
             android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/brightnesstile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/brightness_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/brightness_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/locationtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/location_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/location_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/rotationtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/rotation_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/rotation_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/signaltile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <FrameLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center">
                     <ImageView
                         android:id="@+id/signal_image"
                         android:layout_width="64dp"
                         android:layout_height="64dp"
                         android:layout_gravity="center"
                     />
                     <ImageView
                          android:id="@+id/signal_overlay_image"
                          android:layout_width="64dp"
                          android:layout_height="64dp"
                          android:layout_gravity="center"
                     />
               </FrameLayout>
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/signal_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
     </LinearLayout>
        <LinearLayout
             android:layout_weight="3"
             android:layout_width="match_parent"
             android:layout_height="0dp">
            <LinearLayout
                android:id="@+id/settingtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/setting_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/setting_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/timetile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <AnalogClock
                    android:id="@+id/analog_clock"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:dial="@*android:drawable/clock_dial"
                    android:hand_hour="@*android:drawable/clock_hand_hour"
                    android:hand_minute="@*android:drawable/clock_hand_minute"
               />
               <com.android.systemui.statusbar.clocks.ClockExpand
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/torchtile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/torch_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/torch_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/wifitile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:background="@android:drawable/alert_dark_frame"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/wifi_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
               />
               <TextView
                    android:textAppearance="@style/TextAppearance.StatusBar.Title"
                    android:id="@+id/wifi_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
               />
           </LinearLayout>
     </LinearLayout>
</LinearLayout>
